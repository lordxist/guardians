class Travel
  attr_reader :x_dest, :y_dest, :departure_time
  
  def initialize(x_coord_was, y_coord_was, x_dest, y_dest, departure_time)
    @x_dest = x_dest
    @y_dest = y_dest
    @departure_time = departure_time
  end
  
  def arrival_time
    departure_time + ((x_dest-x_coord_was).abs + (y_dest-y_coord_was).abs) / speed
  end
end
